<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edo.eno.rikosbeta.activity.HomeActivity" >

    <include layout="@layout/my_toolbar"
        android:id="@+id/toolbar_profil"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_below="@id/toolbar_profil">

        <ImageView
            android:id="@+id/cover"
            style="@style/Cover"
            android:src="@drawable/profile_cover"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile_picture"
                app:civ_border_width="2dp"
                android:layout_marginTop="130dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_color="#FFFFFF"/>

            <TextView
                android:id="@+id/namaPanjang"
                style="@style/Name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="2"
                android:textSize="21dp"
                android:paddingTop="10dp"
                android:text="Nama Kamu" />

            <TextView
                android:id="@+id/email"
                style="@style/Name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="normal"
                android:textColor="#000000"
                android:maxLines="2"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:text="email@email.com" />

            <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingTop="10dp"-->
                <!--android:src="@drawable/divider"/>-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="#ffe5e5e5"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btnEdit"
                android:layout_marginTop="30dp"
                android:text="Kost Saya"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:textSize="15sp"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btnLogout"
                android:layout_marginTop="30dip"
                android:text="Logout"
                android:textAllCaps="false"
                android:background="@drawable/rounded_button"
                android:textSize="15sp"/>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add" />

    </FrameLayout>

</RelativeLayout>